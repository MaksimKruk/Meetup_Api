@using MeetupApi.MvcApp.Utility
@model MeetupApi.MvcApp.ViewModels.EventViewModel

@{
    ViewData["Title"] = "Event sample";
}

<h1>Event sample #@Model.Id</h1>

<div>
    <h4>Event ditails</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Theme
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Theme)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Event Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventTime)
        </dd>
        <dt class="col-sm-2">
            Place
        </dt>
        <dd class="col-sm-10">
